                                <!-- Categories -->
                                <div class="block">
                                    <div class="block-content">
                                        <ul class="nav nav-pills nav-stacked push">
                                            <li>
                                                <a href="javascript:void(0)"><span class="badge pull-right">7k</span> 뮤지컬/연극</a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0)"><span class="badge pull-right">2k</span> 영화</a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0)"><span class="badge pull-right">3k</span> 전시/체험</a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0)"><span class="badge pull-right">18k</span> 콘서트/마술</a>
