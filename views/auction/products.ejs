                                </select>
                            </div>
                            <!-- END Sort and Show Filters -->
                            <!-- Products -->
                            <div class="row">
                                <% for(var i = 0; i < auction.length; i++) { %>
                                <div class="col-sm-6 col-lg-4">
                                    <div class="block">
                                        <div class="img-container">
                                            <img class="img-responsive" style="height:35vh" src="uploads/<%= auction[i].a_img %>" alt="">
                                            <div class="img-options">
                                                <div class="img-options-content">
                                                    <div class="push-20">
                                                        <a class="btn btn-sm btn-default" href="/auction/detail/<%= auction[i].aid %>">자세히</a>
