<!DOCTYPE html>
<!--[if IE 9]>         <html class="ie9 no-focus" lang="en"> <![endif]-->
<!--[if gt IE 9]><!--> <html class="no-focus" lang="en"> <!--<![endif]-->
<head>
    <% include ../config/header0.ejs %>

    <link rel="stylesheet" href="css/numberSelector.css">
</head>
<body>
<div id="page-container" class="header-navbar-fixed">
    <% include ../config/nav0.ejs %>

  <!-- Main Container -->
  <main id="main-container">
    <!-- Page Header -->
    <div class="content content-mini bg-white">
      <ol class="breadcrumb push">
        <li>
          <a class="link-effect" href="base_pages_projects_dashboard.html">경매</a>
        </li>
        <li>
          등록하기
        </li>
      </ol>
    </div>
    <!-- END Page Header -->

    <!-- Page Content -->
    <div class="content content-boxed">

        <div class="block block-bordered">
            <div class="block-header bg-gray-lighter">
                <h3 class="block-title">경매 등록하기</h3>
            </div>
            <div class="block-content">
                <form class="form-horizontal push-10-t push-10" method="post" >
                    <div class="row">
                        <div class="col-sm-7">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label for="project-edit-name">제목</label>
                                    <input class="js-maxlength form-control input-lg" type="text" id="project-edit-name" name="project-edit-name" maxlength="50" data-always-show="true" placeholder="경매 제목을 입력해주세요. (50자 이내)">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label class="col-xs-12" for="example-select">분류</label>
                                <div class="col-xs-12">
                                    <select class="form-control" id="example-select" name="example-select">
                                        <option value="" disabled selected hidden>경매 분류를 선택하세요.</option>
                                        <option value="뮤지컬/연극">뮤지컬/연극</option>
                                        <option value="영화">영화</option>
                                        <option value="전시/체험">전시/체험</option>
                                        <option value="콘서트/마술">콘서트/마술</option>
                                        <option value="외식/편의점">외식/편의점</option>
                                        <option value="놀이동산/컨텐츠">놀이동산/컨텐츠</option>
                                        <option value="뷰티/생활">뷰티/생활</option>
                                        <option value="기타">기타</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-7">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label for="mega-bio">Bio</label>
                                    <textarea class="form-control input-lg" id="mega-bio" name="mega-bio" rows="22" placeholder="Enter a few details about yourself.."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label class="col-xs-12" for="example-select">경매 시간</label>
                                <div class="col-xs-12">
                                    <select class="form-control" id="example-select" name="example-select" size="5">
                                        <option value="" disabled selected hidden>경매 시간을 선택하세요.</option>
                                        <option value="1">1시간</option>
                                        <option value="3">3시간</option>
                                        <option value="6">6시간</option>
                                        <option value="12">12시간</option>
                                        <option value="24">24시간</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group number-selector">
                                <div class="col-xs-12">
                                    <label for="project-edit-price">시작가</label>
                                    <div class='ctrl'>
                                        <div class='ctrl__button ctrl__button--decrement'>&ndash;</div>
                                        <div class='ctrl__counter'>
                                            <input class='ctrl__counter-input' id="project-edit-price" name="project-edit-price" maxlength='7' type='text' value='1000'>
                                            <div class='ctrl__counter-num'>1000</div>
                                        </div>
                                        <div class='ctrl__button ctrl__button--increment'>+</div>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-12" for="example-file-input">사진 업로드</label>
                                <div class="col-xs-12">
                                    <img src="img/no_image.jpg" id="post-image">
                                    <input type="file" id="example-file-input" name="example-file-input">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <button class="btn btn-warning" type="submit"><i class="fa fa-check push-5-r"></i> Complete Profile</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END Page Content -->
  </main>
  <!-- END Main Container -->
</div>
<!-- END Page Container -->

<% include ../config/footer0.ejs %>

<script src="js/numberSelector.js"></script>
<script src="js/post.js"></script>

<!-- Page JS Plugins -->
<script src="vendor/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>

<!-- Page JS Code -->
<script>
    jQuery(function () {
        // Init page helpers (BS Maxlength + Select2 + Tags Inputs + CKEditor + Appear + CountTo plugins)
        App.initHelpers(['maxlength']);
    });
</script>

</body>
</html>