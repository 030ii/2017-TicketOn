<!DOCTYPE html>
<html>
  <head>
    <% include ../header.ejs %>
  </head>
  <body>
    <div class="container">
      <form action="/auctionPost" method="POST" role="form">
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-1">
              <strong>제목</strong>
            </div>
            <div class="col-md-6">
              <input type="text" name="title" style="width:80%" placeholder="제목을 입력하세요." />
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-1">
              <strong>경매시간:</strong>
            </div>
            <div class="col-md-1">
              <select name="deadline">
                <option value="1" selected>1시간</option>
                <option value="3">3시간</option>
                <option value="6">6시간</option>
                <option value="12">12시간</option>
                <option value="24">24시간</option>
              </select>
            </div>
            <div class="col-md-1">
              <strong>시작금:</strong>
            </div>
            <div class="col-md-3">
              <input type="number" name="minPrice" style="width:50%" value="500" step="100" min="500" />
              <strong>원</strong>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-6">
              <strong>내용: </strong><br>
              <textarea name="name" rows="4" style="width:100%"></textarea>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-6">
              <strong>첨부사진: </strong><br>
              <input type="file" name="img" style="width:100%;border:solid 1px gray" value="" />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-1">
            <input type="submit" class="btn btn-primary" value="등록" />
          </div>
          <div class="col-md-1">
            <a class="btn btn-danger" href="/auctionList">취소</a>
          </div>
        </div>
      </form>
    </div>
    <% include ../footer.ejs %>
  </body>
</html>
